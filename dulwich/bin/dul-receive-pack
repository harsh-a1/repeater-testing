import sys
from dulwich.server import GitBackend, ReceivePackHandler

def send_fn(data):
    sys.stdout.write(data)
    sys.stdout.flush()

if __name__ == "__main__":
    gitdir = None
    if len(sys.argv) > 1:
        gitdir = sys.argv[1]

    backend = GitBackend(gitdir)
    handler = ReceivePackHandler(backend, sys.stdin.read, send_fn)
    handler.handle()
